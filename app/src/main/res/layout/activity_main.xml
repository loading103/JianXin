<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_f5f5f5"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_tab1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:lottie_imageAssetsFolder="images"
                android:src="@mipmap/im_main_conver" />

            <CheckedTextView
                android:id="@+id/ctv_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天"
                android:checked="true"
                android:layout_gravity="center"
                android:textColor="@color/primarybar_txt"
                android:gravity="center"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_tab2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:lottie_imageAssetsFolder="images"
                android:src="@mipmap/im_main_contact" />

            <CheckedTextView
                android:id="@+id/ctv_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:layout_gravity="center"
                android:textColor="@color/primarybar_txt"
                android:gravity="center"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_tab3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:lottie_imageAssetsFolder="images"
                android:src="@mipmap/im_main_find" />
            <CheckedTextView
                android:id="@+id/ctv_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textColor="@color/primarybar_txt"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_tab4"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:lottie_imageAssetsFolder="images"
                android:src="@mipmap/im_main_mine" />
            <CheckedTextView
                android:id="@+id/ctv_tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/primarybar_txt"
                android:text="我的"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </LinearLayout>
    <com.congda.baselibrary.widget.ViewPagerSlide
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tabs" />
</RelativeLayout>